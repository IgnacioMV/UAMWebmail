<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="#EEE">

        <ImageView
            android:id="@+id/row_attachment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_attachment_grey_24dp"
            android:layout_centerVertical="true"
            android:background="#CCC"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/row_attachment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:layout_toRightOf="@id/row_attachment_icon"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:text="asdfasdf"
             />

        <ImageView
            android:id="@+id/row_attachment_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_more_vert_grey_24dp"
            android:paddingRight="12dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DDDDDD" />

</LinearLayout>